{
  "name": "@schooliat/api",
  "version": "0.0.0",
  "description": "API for SchooliAT app",
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "src/server.js",
  "engines": {
    "node": ">=20.19.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "preinstall": "node -e \"const v=process.version.slice(1).split('.').map(Number);if(v[0]<20||(v[0]===20&&v[1]<19)){console.error('âŒ Node.js version must be >=20.19.0. Current:',process.version);process.exit(1)}\"",
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "echo 'No tests until initial development is done.'",
    "postinstall": "npx --yes prisma generate --schema=src/prisma/db/schema.prisma || echo 'Prisma generate skipped'",
    "prisma:generate": "prisma generate --schema=src/prisma/db/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=src/prisma/db/schema.prisma && npm run prisma:generate",
    "prisma:migrate:reset": "prisma migrate reset --schema=src/prisma/db/schema.prisma && npm run prisma:generate",
    "prisma:migrate:status": "prisma migrate status --schema=src/prisma/db/schema.prisma",
    "prisma:migrate:create": "prisma migrate dev --create-only --schema=src/prisma/db/schema.prisma",
    "prisma:migrate:deploy": "prisma migrate deploy --schema=src/prisma/db/schema.prisma",
    "prisma:format": "prisma format --schema=src/prisma/db/schema.prisma",
    "seed": "node prisma/seed.js",
    "test:phase1": "node test-phase1-apis.js",
    "test:all": "node test-all-apis.js",
    "test:comprehensive": "node test-comprehensive-apis.js",
    "test:mobile": "node test-mobile-apis.js",
    "test:mobile:staging-production": "node test-mobile-apis-staging-production.js",
    "test:staging": "bash scripts/test-staging-apis.sh",
    "test:production": "bash scripts/test-production-apis.sh",
    "migrate:phase1": "bash scripts/run-migration.sh",
    "migrate:staging": "bash scripts/migrate-staging.sh",
    "migrate:production": "bash scripts/migrate-production.sh",
    "migrate:status": "bash scripts/check-migration-status.sh",
    "migrate:seed": "bash scripts/migrate-and-seed.sh",
    "migrate:seed:production": "bash scripts/migrate-and-seed-production.sh",
    "check:dashboard-db": "node scripts/check-dashboard-db.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.948.0",
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "archiver": "^7.0.1",
    "bcryptjs": "^3.0.3",
    "compression": "^1.8.1",
    "connect-timeout": "^1.9.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "nodemailer": "^8.0.1",
    "pg": "^8.16.3",
    "pino": "^9.6.0",
    "puppeteer": "^24.32.0",
    "redis": "^5.10.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.0.0",
    "prisma": "^7.2.0",
    "swagger-ui-express": "^5.0.1"
  }
}
