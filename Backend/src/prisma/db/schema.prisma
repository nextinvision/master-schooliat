  RESULT
  INVENTORY_RECEIPT
  FEE_RECEIPT

  @@map("template_type")
}

enum TransportType {
  BUS
  VAN
  CAR

  @@map("transport_type")
}

enum LeadStatus {
  NEW
  HOT
  COLD
  FOLLOW_UP
