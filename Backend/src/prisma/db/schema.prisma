}

enum FeePaymentStatus {
  PENDING
  PARTIALLY_PAID
  PAID

  @@map("fee_payment_status")
}

enum GrievanceStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED

  @@map("grievance_status")
}

enum GrievancePriority {
  LOW
  MEDIUM
  HIGH
  URGENT

  @@map("grievance_priority")
