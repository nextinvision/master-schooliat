# Backend Environment Variables
# Copy this file to .env for local development

# Environment
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/schooliat_dev
DATABASE_DIRECT_URL=postgresql://user:password@localhost:5432/schooliat_dev

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# JWT
JWT_SECRET=your_jwt_secret_key_here_change_this
JWT_EXPIRATION_TIME=48

# CORS - Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3002,http://localhost:3003,http://localhost:3000

# MinIO/S3 Storage
MINIO_ENDPOINT=http://localhost:9000
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin123

# Logging
LOG_LEVEL=debug
